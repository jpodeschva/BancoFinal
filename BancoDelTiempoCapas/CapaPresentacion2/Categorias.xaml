<Page x:Class="CapaPresentacion2.Categorias"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentacion2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Categorias">

    <Grid>
        <Image HorizontalAlignment="Center" Margin="0" Stretch="Fill" VerticalAlignment="Center" Source="/fondo.png"/>
        <TextBox x:Name="Buscar" HorizontalAlignment="Left" Height="23" Margin="629,252,0,0" TextWrapping="Wrap" Text="Buscar" VerticalAlignment="Top" Width="120" TextChanged="Buscar_TextChanged" RenderTransformOrigin="2.986,3.348"/>
        <ListBox x:Name="ListaCategorias" HorizontalAlignment="Left" Height="74" Margin="517,30,0,0" VerticalAlignment="Top" Width="232" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox x:Name="Añadir" HorizontalAlignment="Left" Height="23" Margin="629,305,0,0" TextWrapping="Wrap" Text="Añadir" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Volver" HorizontalAlignment="Left" Height="23" Margin="629,360,0,0" TextWrapping="Wrap" Text="Volver" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
